		INCLUDE	"monitorvectors.i"
		INCLUDE "declare.src"
		INCLUDE "zeropage.i"
		INCLUDE	"f256.i"

		SECTION	"tedmon",CODE[MONITOR_BASE]

ZeroPage	DS	256	
Stack		DS	256	

		SECTION	"EntryVectors",CODE[MONITOR_VECTOR_BASE]
	
VECTOR:		MACRO
		DW	\1
		ENDM

MonitorVectors:
		VECTOR	Initialize
		VECTOR	break
		VECTOR	NMI
		VECTOR	call
		VECTOR	text_SetLUT
		VECTOR	text_SetFont
		VECTOR	text_Enable
		VECTOR	text_Disable
		VECTOR	text_ClearScreen
		VECTOR	text_CharOut
		VECTOR	text_EnableCursor
		VECTOR	text_DisableCursor
		VECTOR	kbd_ReadKeyCode
		VECTOR	kbd_EditLine

NMI:		rts

Initialize:
		; variable initialization
		lda	#$80
		sta	kbd_Sending
		stz	kbd_State
		stz	kbd_Shift
		stz	mode ; 40 col

		rts


